---
// src/layouts/BaseLayout.astro
const { title } = Astro.props;
---

<html lang="ar" dir="rtl">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <title>{title}</title>
        <style>
            /* تنسيقات بسيطة وسريعة */
            body {
                font-family: system-ui, sans-serif;
                margin: 0;
                background: #f9f9f9;
                color: #333;
            }
            nav {
                background: #2c3e50;
                padding: 1rem;
                color: white;
            }
            nav a {
                color: white;
                text-decoration: none;
                font-weight: bold;
                margin-left: 15px;
            }
            main {
                max-width: 800px;
                margin: 2rem auto;
                padding: 0 1rem;
            }
            footer {
                text-align: center;
                padding: 2rem;
                color: #666;
                font-size: 0.9rem;
            }
        </style>
    </head>
    <body>
        <nav>
            <div style="max-width: 800px; margin: 0 auto;">
                <a href="/">الرئيسية</a>
                <a href="/blog">المدونة</a>
            </div>
        </nav>
        <main>
            <slot />
        </main>
        <footer>© 2024 Amr Shalaby - All rights reserved.</footer>
    </body>
</html>
